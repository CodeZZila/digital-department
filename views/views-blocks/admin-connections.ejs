
    <div class="admin-connections admin-cont">
        <div class="admin-header">
            <h2>Налаштування зв'язків</h2>
            <button id="connections_btn" class="plus_btn"><svg xmlns="http://www.w3.org/2000/svg" fill="white" width="20" height="20" viewBox="0 0 24 24"><path d="M24 10h-10v-10h-4v10h-10v4h10v10h4v-10h10z"/></svg></button>

        </div>
        <hr>
        <div class="admin-body">
            <table id="connections_table" class="admin-table hover">
                <thead>
                    <th>#</th>
                    <th>Дисципліна</th>
                    <th>Викладач</th>
                    <th>Група</th>
                    <th ></th>
                </thead>
                <tbody id="relationsDiv">
                    <% for(let i =0; i<relations.length; i++){%>
                        <tr>
                            <th><%=i+1%></th>
                            <% for(let j =0; j<subjects.length; j++){%>
                                <%if(relations[i].idSubject.toString()===subjects[j]._id.toString()){%>
                                    <td><%=subjects[j].abbreviation%></td>
                                <%}%>
                            <%}%>
                            <% for(let j =0; j<teachers.length; j++){%>

                                <%if(relations[i].idTeacher.toString()===teachers[j]._id.toString()){%>
                                    <td><%=teachers[j].surnameTeacher%></td>
                                <%}%>
                            <%}%>
                            <% for(let j =0; j<groups.length; j++){%>
                                <%if(relations[i].idGroup.toString()===groups[j]._id.toString()){%>
                                    <td><%=groups[j].nameGroup%></td>
                                <%}%>
                            <%}%>
                            <td>
                                <div id="<%= relations[i].id%>" onclick="deleteRelation(this.id)">
                                    <svg class="table-icon" fill="#f54242" xmlns="http://www.w3.org/2000/svg"  width="24" height="24" viewBox="0 0 24 24"><path d="M9 19c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm4 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm4 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5-17v2h-20v-2h5.711c.9 0 1.631-1.099 1.631-2h5.315c0 .901.73 2 1.631 2h5.712zm-3 4v16h-14v-16h-2v18h18v-18h-2z"/></svg>
                                </div>
                            </td>
                        </tr>
                    <%}%>

                </tbody>
            </table>
        </div>
    </div>

    
<div id="connections_modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Додати зв'язок</h3>
            <span class="close" id="connections-close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="form__group field">
                <label for="idSubject" class="form__label">Назва дисципліни</label>
                <input class="form__field" name="status" list="datalistOptions_idSubject" id="idSubject" placeholder="Нажміть для пошуку...">
                <datalist id="datalistOptions_idSubject">
                    <%for(let i = 0; i<subjects.length;i++){%>
                    <option data-id="<%=subjects[i]._id%>" value="<%=subjects[i].abbreviation%>">
                        <%}%>
                </datalist>
            </div>
            <div class="form__group field">
                <label for="idGroup" class="form__label">Номер групи</label>
                <input class="form__field" list="datalistOptions_idGroup" id="idGroup" placeholder="Нажміть для пошуку...">
                <datalist id="datalistOptions_idGroup">
                    <%for(let i = 0; i<groups.length;i++){%>
                    <option data-id="<%=groups[i]._id%>" value="<%=groups[i].nameGroup%>">
                        <%}%>
                </datalist>
            </div>
            <div class="form__group field">
                <label for="idTeacher" class="form__label">Викладач</label>
                <input class="form__field" list="datalistOptions_idTeacher" id="idTeacher" placeholder="Нажміть для пошуку...">
                <datalist id="datalistOptions_idTeacher">
                    <%for(let i = 0; i<teachers.length;i++){%>
                    <option data-id="<%=teachers[i]._id%>" value="<%=teachers[i].surnameTeacher%>">
                        <%}%>
                        <!--          <option value="Редзюк">-->
                        <!--          <option value="Власенко">-->
                        <!--          <option value="Фесьоха">-->
                </datalist>
            </div>
        </div>
      <button class="blue_btn" onclick="addRelation()">Зберегти</button>

    </div>
  
  </div>
